{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": [
    "mocha"
  ],
  "rules": {
    "comma-spacing": [2, { "before": false, "after": true }],
    "comma-dangle": [2, "always-multiline"],
    "object-curly-spacing": [2, "always"],
    "indent": [2, 2],
    "linebreak-style": [2, "unix"],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "mocha/no-exclusive-tests": 2,
    "mocha/no-skipped-tests": 2
  }
}
